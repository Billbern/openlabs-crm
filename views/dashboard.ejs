<!DOCTYPE html>
<html lang="en">
    <%- include('partials/headers') %> 
<body>
    <div class="dash-main">
        <div class="dash-head container">
            <%- include('partials/dashmenu') %> 
        </div>
        <div class="dash-body">
            <div>
                <%- include('partials/toolbar') %> 
                <% if (role === 'student') { %>
                    <%- include("partials/student") %> 
                <% }else if (role === "company"){ %>
                    <%- include("partials/company") %> 
                <% } else { %>
                    <%- include("partials/admin") %> 
                <% } %>
            </div>
            <% if (role === "company") { %>
                <!-- Form for entering job details -->
                <div class="job-form deactivate" id="jobForm">
                    <div>
                        <form action="/user/jobs" method="post">
                            <div class="bi-form">
                                <h5>Basic Information</h5>
                                <div class="bi-title">
                                    <input type="text" name="title" id="" placeholder="Job title" required>
                                </div>
                                <div class="bi-dept">
                                    <input type="text" name="department" id="" placeholder="department" required>
                                </div>
                                <div class="bi-loc">
                                    <div>
                                        <div>
                                            <input type="text" name="region" id="region" placeholder="region" required>
                                        </div>
                                        <div>
                                            <input type="text" name="city" id="city" placeholder="city" required>
                                        </div>
                                        <div>
                                            <input type="checkbox" name="remote" id="remote" placeholder="remote">
                                            <label for="">Remote</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="bi-tags">
                                    <input type="text" name="tags" id="tags" placeholder="enter tag" required>
                                </div>
                            </div>
                            <div class="po-form">
                                <h5>About the position</h5>
                                <div>
                                    <div id="quillToolbar">
